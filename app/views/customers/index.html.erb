<h1>Listing all the customers</h1>
 
<table border="1" cellpadding="5" cellspacing="5">
  <tr>
    <th>Consumer Number</th>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Address</th>
    <th>Area</th>
    <th>Installation Date Enter digits</th>
    <th>Flavors</th>
    <th>Plan</th>
    <th>Edit Customer</th>
    <th>Delete Customer Record</th>
  </tr>
 
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.consumer_no %></td>
      <td><%= customer.name %></td>
      <td><%= customer.phone_number %></td>
      <td><%= customer.address %></td>
      <td><%= customer.area %></td>
      <td><%= customer.installation_date %></td>
      <td><%= customer.flavors %></td>
      <td><%= customer.plan %></td>
      <td><%= link_to 'Edit Profile', edit_customer_path(customer) %></th>      
      <td><%= link_to 'Delete Record', customer,
               :confirm => 'Are you sure?',
               :method => :delete %></td>
    </tr>
  <% end %>
</table>
<BR>
