<%= simple_form_for @customer do |f| %>
    <%= f.input :consumer_no %>
    <%= f.input :name %>
    <%= f.input :gstid, required: false %>
    <%= f.input :area, required: false %>
	<%= f.input :phone_number %>
	<%= f.input :address, as: :text ,:input_html => {:style => 'width: 205px ; height: 50px'}%>
	<%= f.input :how_to_reach, as: :text, :input_html => {:style => 'width: 205px ; height: 50px'}%>
	<%= f.input :installation_date, as: :date_picker %>
	<%= f.input :flavors, placeholder: 'example: 3 rose'%>
	<%= f.input :plan, placeholder: 'enter only numbers'  %>
	<%= f.input :period, placeholder: 'no of days'  %>
	<%= f.input :machine_count, placeholder: 'no of machines' %>
    <%= f.button :submit %>
<% end %>
